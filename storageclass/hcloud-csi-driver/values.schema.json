{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://gitlab.com/MatthiasLohr/hcloud-csi-driver-helm-chart/-/raw/main/values.schema.json",
    "title": "Values",
    "type": "object",
    "properties": {
        "controller": {
            "description": "Controller configuration",
            "type": "object",
            "properties": {
                "image": {
                    "description": "hcloud-csi-driver Docker image for controller containers",
                    "type": "string"
                },
                "imagePullPolicy": {
                    "description": "ImagePullPolicy for the hcloud-csi-driver Docker image",
                    "type": "string"
                }
            },
            "required": [
                "image"
            ]
        },
        "node": {
            "description": "Node configuration",
            "type": "object",
            "properties": {
                "image": {
                    "description": "hcloud-csi-driver Docker image for node containers",
                    "type": "string"
                },
                "imagePullPolicy": {
                    "description": "ImagePullPolicy for the hcloud-csi-driver Docker image",
                    "type": "string"
                },
                "kubeletPath": {
                    "description": "Base path of kubelet lib dir",
                    "type": "string"
                }
            },
            "required": [
                "image"
            ]
        },
        "storageClass": {
            "description": "Settings for the StorageClass resource to be created",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of the StorageClass to be created",
                    "type": "string"
                },
                "isDefault": {
                    "description": "Should the StorageClass be annotated as default storage class?",
                    "type": "boolean"
                },
                "reclaimPolicy": {
                    "description": "The reclaimPolicy that the StorageClass should use",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "secret": {
            "description": "Secret for the Hetzner Cloud API token",
            "type": "object",
            "properties": {
                "hcloudApiToken": {
                    "description": "Hetzner Cloud API token. Will be ignored if existingSecretName is set.",
                    "type": ["null", "string"]
                },
                "existingSecretName": {
                    "description": "Set this name to use an existing secret. Keep it empty to have a secret generated by this chart.",
                    "type": ["null", "string"]
                }
            },
            "required": []
        },
        "metrics": {
            "description": "Metrics configuration",
            "type": "object",
            "properties": {
                "enabled": {
                    "description": "Enable metrics (create exporters etc.)",
                    "type": "boolean"
                }
            },
            "required": [
                "enabled"
            ]
        }
    },
    "required": [
        "controller",
        "node",
        "storageClass",
        "secret",
        "metrics"
    ]
}
